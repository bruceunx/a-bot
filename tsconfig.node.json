{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@common/*": [
        "src/common/*"
      ]
    },
    "types": [
      "electron-vite/node"
    ]
  }
}
